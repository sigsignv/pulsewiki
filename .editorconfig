root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[composer.json]
indent_style = space
indent_size = 4

[.github/workflows/*.yml]
indent_style = space
indent_size = 2

[tests/phpunit*.xml]
indent_style = space
indent_size = 4
